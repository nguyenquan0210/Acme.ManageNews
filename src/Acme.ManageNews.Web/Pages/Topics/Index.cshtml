@page
@using Acme.ManageNews.Localization
@using Acme.ManageNews.Permissions
@using Acme.ManageNews.Web.Pages.Topics
@using Microsoft.AspNetCore.Authorization
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<ManageNewsResource> L
@inject IAuthorizationService AuthorizationService
@model IndexModel

@section scripts
{
    <abp-script src="/Pages/Topics/Index.js"/>
}

<abp-card>
    <abp-card-header>
        <abp-row>
            <abp-column size-md="_10">
                <abp-card-title>@L["Topics"]</abp-card-title>
            </abp-column>
            <abp-column size-md="_2" class="text-end">
                @if (await AuthorizationService
                    .IsGrantedAsync(ManageNewsPermissions.Topics.Create))
                {
                    <abp-button id="NewTopicsButton"
                                text="@L["NewTopics"].Value"
                                icon="plus"
                                button-type="Primary"/>
                }
            </abp-column>
        </abp-row>
    </abp-card-header>
    <abp-card-body>
        <abp-table striped-rows="true" id="TopicsTable"></abp-table>
    </abp-card-body>
</abp-card>